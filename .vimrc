set nocompatible
syntax on
filetype plugin on
filetype indent on
set bg=dark

" Line Nuumberring and Rulelr
set number
set autoread
set ruler

" Smartcase and Highlight Searching
set ignorecase
set smartcase
set hlsearch
set incsearch
set showmatch

" Remove timeout delay before opening a new line with o/O
set timeout timeoutlen=1000 ttimeoutlen=100

